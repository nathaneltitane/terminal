#!/bin/bash

# dependencies /////////////////////////////////////////////////////////////////

if [[ -z $(command -v frobulator) ]]
then
	curl -s -L get.frbltr.app > "${PREFIX}"/bin/frobulator
fi

. "${PREFIX}"/bin/frobulator

# script ///////////////////////////////////////////////////////////////////////

script=$(basename -- "${BASH_SOURCE[0]}")

# version //////////////////////////////////////////////////////////////////////

version="12-24-2021"

# usage ////////////////////////////////////////////////////////////////////////

# prompt ///////////////////////////////////////////////////////////////////////

frobulate.script "Setting up ${script#*-}"
echo

# variables ////////////////////////////////////////////////////////////////////

TEMPORARY=$(mktemp -d -t TEMPORARY.XXXXXX)

trap 'rm -rf "${TEMPORARY}"' EXIT

download_directory="${TEMPORARY}"

application="leocad"
architecture="arm64"

archive=$(curl -s -L https://api.github.com/repos/leozide/leocad/releases/latest | grep -o [aA0-zZ9-]*${architecture}.zip | head -n 1)

archive_url="https://github.com/leozide/leocad/releases/download/continuous/${archive}"

extract_command=$(unzip -qq -d /usr/bin -o "${download_directory}"/*.zip)

# defaults /////////////////////////////////////////////////////////////////////

install_list=(
	curl
	zip
	unzip
)

frobulate.install ${install_list[@]}

# get #

frobulate.download "${archive_url}" "${download_directory}"

# extract #

frobulate.silence "${extract_command}" &

frobulate.progress "Extracting..."

frobulate.scs "Done."
