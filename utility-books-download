)

if [ ! -d "${HOME}"/Books/"${author}" ]
then
	mkdir -p "${HOME}"/Books/"${author}"
fi

author=${author[@]}

IFS=$'\n'

for i in ${!digits[@]}
do
	extension="epub"

	digit="${digits[i]}"

	title="${titles[i]}"

	curl -s -L "${url}"/"${digit}"."${extension}" > "${HOME}"/Books/"${author}"/"${author} - ${title}.${extension}"

	echo "Downloading ${digit} - ${author} - ${title} [ ${extension} ]"
	echo

done

IFS=''
