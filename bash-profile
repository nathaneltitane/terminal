#!/bin/bash

# profile /////////////////////////////////////////////////////////////////////

# shell loading order

# login shell:

# system profile
# system bash configuration
# home bash configuration

# non-login shell:

# system bash configuration
# home bash configuration

# non-login shell requires 'bashrc'

# dependencies /////////////////////////////////////////////////////////////////

if [[ -z $(command -v frobulator) ]]
then
	if [[ -z $(command -v curl) ]]
	then
		yes | apt-get install curl
	fi

	curl -s -L get.frbltr.app > /usr/bin/frobulator

	chmod +x /usr/bin/frobulator
fi

. /usr/bin/frobulator

# bash /////////////////////////////////////////////////////////////////////////

if [ -n "${BASH_VERSION}" ]
then
	if [ -f "${HOME}"/.bash_configuration ]
	then
		. "${HOME}"/.bash_configuration
	fi
fi

# path /////////////////////////////////////////////////////////////////////////

if [ -d "${HOME}"/bin ]
then
	PATH="${HOME}/bin:${PATH}"
fi

if [ -d "${HOME}"/.local/bin ]
then
	PATH="${HOME}/.local/bin:${PATH}"
fi
