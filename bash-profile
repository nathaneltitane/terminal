#!/bin/bash

# bash /////////////////////////////////////////////////////////////////////////

if [ -n "${BASH_VERSION}" ]
then
	if [ -f "${HOME}"/.bash_configuration ]
	then
		. "${HOME}"/.bash_configuration
	fi
fi

# path /////////////////////////////////////////////////////////////////////////

if [ -d "${HOME}"/bin ]
then
    PATH="${HOME}/bin:${PATH}"
fi

if [ -d "${HOME}"/.local/bin ]
then
    PATH="${HOME}/.local/bin:${PATH}"
fi


