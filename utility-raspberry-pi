#!/bin/bash

# user #

deluser --remove-home ubuntu
groupdel -f ubuntu

chpasswd <<< root:09018610

# hostname #

echo pi > /etc/hostname

hostnamectl set-hostname pi

# ssh #

cat << 'FILE' > /boot/firmware/ssh
FILE

# network #

cat << 'FILE' > /etc/netplan/01-wlan0-config.yaml
network:
	version: 2

	ethernets:
	  eth0:
	    dhcp4: no
	    dhcp6: no

	wifis:
	  wlan0:
	    dhcp4: no
	    dhcp6: no

	    addresses:
	      - 192.168.86.21/24

	    nameservers:
	      addresses:
	        - 8.8.8.8
	        - 1.1.1.1

	    routes:
	        - to: default
	          via: 192.168.86.1

	    access-points:
	      "WiFi":
	        password: "y5cE?z>6&juDEm"
FILE

netplan generate
netplan apply

# configuration #

cat << 'FILE' > /boot/firmware/config.txt
[pi4]
max_framebuffers=2

[all]
arm_64bit=1
disable_splash=1
kernel=vmlinuz
cmdline=cmdline.txt
initramfs initrd.img followkernel
loglevel=1
dtoverlay=vc4-kms-v3d,noaudio
dtparam=audio=on
dtparam=i2c_arm=on
dtparam=spi=on
enable_uart=1

disable_overscan=1
hdmi_force_hotplug=1

over_voltage=8
arm_freq=2000
FILE

# packages #

apt --assume-yes update
apt --assume-yes purge snap thin-provisioning-tools
apt --assume-yes upgrade

reboot
