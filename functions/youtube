# youtube #

youtube () {
	[[ -z $(command -v youtube-dl) ]] && console.download https://yt-dl.org/downloads/latest "${PREFIX}"/bin youtube-dl

	path="${2}"

	[ -z "${path}" ] && path="${PWD}"

	cd "${path}" || exit 1

	youtube-dl												\
		--ignore-errors										\
		--yes-playlist										\
		--extract-audio										\
		--format			bestaudio						\
		--audio-format		mp3								\
		--audio-quality		160K							\
		--output			"%(title)s.%(ext)s"				\
															"${1}"
}
