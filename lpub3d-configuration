#!/bin/bash

# dependencies /////////////////////////////////////////////////////////////////

if [ -f "${HOME}"/.local/bin/frobulator ]
then
	rm -r -f "${HOME}"/.local/bin/frobulator
fi

if [[ -z $(command -v frobulator) ]]
then
	if [[ $(id -u -n) = "root" ]]
	then
		SUDO_HOME=/root

		USER="${SUDO_USER}"

		HOME=/home/"${USER}"
	fi

	if [[ -z $(command -v curl) ]]
	then
		yes | apt-get install curl
	fi

	if [ ! -d "${HOME}"/.local/bin ]
	then
		mkdir -p "${HOME}"/.local/bin
	fi

	curl -s -L get.frbltr.app > "${HOME}"/.local/bin/frobulator

	chmod +x "${HOME}"/.local/bin/frobulator
fi

. "${HOME}"/.local/bin/frobulator

# superuser ////////////////////////////////////////////////////////////////////

frobulator.escalate

# script ///////////////////////////////////////////////////////////////////////

script=$(basename -- "${BASH_SOURCE[0]}")

# version //////////////////////////////////////////////////////////////////////

version="02-10-2024"

# usage ////////////////////////////////////////////////////////////////////////

# prompt ///////////////////////////////////////////////////////////////////////

frobulator.script "Setting up ${script#*-}"

# variables ////////////////////////////////////////////////////////////////////

# defaults /////////////////////////////////////////////////////////////////////

# functions ////////////////////////////////////////////////////////////////////

if [[ $(command -v lpub3d24) ]]
then
    frobulator.link /usr/bin /usr/bin lpub3d24 lpub3d
fi

if [ -d /media/internal/Lego ]
then
	if [ -d /media/internal/Lego/lpub3d ]
	then
		if [ -f /media/internal/Lego/lpub3d/lpub3d.conf ]
		then
			frobulator.inf "Linking configuration"
			echo

			frobulator.directory "${HOME}"/.config/"LPub3D Software"

			frobulator.link /media/internal/Lego/lpub3d "${HOME}"/.config/"LPub3D Software" lpub3d.conf
		fi

		if [ -f /media/internal/Lego/ldraw.zip ]
		then
			frobulator.inf "Generating library setup"
			echo

			frobulator.directory "${HOME}"/.local/share/"LPub3D Software" lpub3d/libraries

			# official parts archive

			frobulator.extract /media/internal/Lego/ldraw.zip "${HOME}"/.local/share/"LPub3D Software"/lpub3d

			frobulator.link /media/internal/Lego "${HOME}"/.local/share/"LPub3D Software"/lpub3d/libraries ldraw.zip complete.zip

			# unofficial parts archive

			frobulator.extract /media/internal/Lego/ldrawunf.zip "${HOME}"/.local/share/"LPub3D Software"/lpub3d/ldraw

			frobulator.link /media/internal/Lego "${HOME}"/.local/share/"LPub3D Software"/lpub3d/libraries ldrawunf.zip lpub3dldrawunf.zip

			chmod -R 777 "${HOME}"/.local/share/"LPub3D Software"
		fi

	fi
fi

# generate launcher

cat <<- 'FILE' > /usr/share/applications/lpub3d.desktop
[Desktop Entry]
Version=1.0
Name=LPub3D
GenericName=LDraw Editor
Comment=An LDraw Building Instruction Editor
Exec=lpub3d %f
Terminal=false
Type=Application
Icon=lpub3d
MimeType=application/x-ldraw;application/x-multi-part-ldraw;application/x-multipart-ldraw;
Categories=Graphics;3DGraphics;Publishing;Engineering;
Keywords=;Building;CAD;CAI;Editor;Education;Instructions;LDraw;LEGO;Publishing;Renderer;Viewer;
FILE

frobulator.scs "Done"
echo
