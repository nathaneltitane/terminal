#!/bin/bash

# dependencies #

if [[ -z $(command -v frobulator) ]]
then
	curl -s -L get.frbltr.app > "${PREFIX}"/bin/frobulator
fi

. "${PREFIX}"/bin/frobulator

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

# usage #

# prompt #

# variables

# defaults #

# functions #

# git #

frobulate.link "${PREFIX}"/media/internal/Git          "${HOME}"         .gitconfig
frobulate.link "${PREFIX}"/media/internal/Git          "${HOME}"         .git-credentials

# geany #

frobulate.link "${PREFIX}"/media/internal/Git/terminal "${HOME}"/.config geany

# shell #

files_list+=(
	.bash_aliases
	.bash_functions
	.bash_logout
	.bashrc
	.hushlogin
	.profile
)

frobulate.download get.trmnl.me/shell "${HOME}" ${files_list[@]}

frobulate.link "${HOME}" /root ${files_list[@]}

files_list=()
