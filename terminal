#!/bin/bash

# dependencies #

[ ! -f "${PREFIX}"/bin/console ] && curl -s -L get.trmnl.me/console/console > "${PREFIX}"/bin/console && . "${PREFIX}"/bin/console
fi

# script #

script=$(basename -- "${BASH_SOURCE[0]}")

# version #

version="01-19-2022"

# usage #

# prompt #

# variables

# defaults #

# functions

# setup

# git #

console.link "${PREFIX}"/media/internal/Git          "${HOME}"         .gitconfig
console.link "${PREFIX}"/media/internal/Git          "${HOME}"         .git-credentials

# geany #

console.link "${PREFIX}"/media/internal/Git/terminal "${HOME}"/.config geany

# shell #

files_list+=(
	.bash_aliases
	.bash_functions
	.bash_logout
	.bashrc
	.hushlogin
	.profile
)

console.download get.trmnl.me/shell "${HOME}" ${files_list[@]}

console.link "${HOME}" /root ${files_list[@]}

files_list=()
