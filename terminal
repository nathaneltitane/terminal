#!/bin/bash

# dependencies /////////////////////////////////////////////////////////////////

if [[ -z $(command -v frobulator) ]]
then
	curl -s -L get.frbltr.app > "${PREFIX}"/bin/frobulator
fi

. "${PREFIX}"/bin/frobulator

# script ///////////////////////////////////////////////////////////////////////

script=$(basename -- "${BASH_SOURCE[0]}")

# version //////////////////////////////////////////////////////////////////////

version=""

# usage ////////////////////////////////////////////////////////////////////////

# prompt ///////////////////////////////////////////////////////////////////////

# variables ////////////////////////////////////////////////////////////////////

# defaults /////////////////////////////////////////////////////////////////////

# functions ////////////////////////////////////////////////////////////////////

# git #

frobulator.link "${PREFIX}"/media/internal/Git          "${HOME}"         .gitconfig
frobulator.link "${PREFIX}"/media/internal/Git          "${HOME}"         .git-credentials

# geany #

frobulator.link "${PREFIX}"/media/internal/Git/terminal "${HOME}"/.config geany

# shell #

files_list+=(
	bash-aliases
	bash-functions
	bash-logout
	bash-configuration
	bash-profile
)

frobulator.download get.trmnl.me "${HOME}" ${files_list[@]}

frobulator.link "${HOME}" /root ${files_list[@]}

files_list=()
