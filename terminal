#!/bin/bash

# dependencies /////////////////////////////////////////////////////////////////

if [[ -z $(command -v frobulator) ]]
then
	curl -s -L get.frbltr.app > "${PREFIX}"/bin/frobulator
fi

. "${PREFIX}"/bin/frobulator

# script ///////////////////////////////////////////////////////////////////////

script=$(basename -- "${BASH_SOURCE[0]}")

# version //////////////////////////////////////////////////////////////////////

version=""

# usage ////////////////////////////////////////////////////////////////////////

# prompt ///////////////////////////////////////////////////////////////////////

# variables ////////////////////////////////////////////////////////////////////

# defaults /////////////////////////////////////////////////////////////////////

# functions ////////////////////////////////////////////////////////////////////

# git //////////////////////////////////////////////////////////////////////////

frobulator.link "${PREFIX}"/media/internal/Git "${HOME}" git-configuration .gitconfig
frobulator.link "${PREFIX}"/media/internal/Git "${HOME}" git-credentials   .git-credentials

# geany  ///////////////////////////////////////////////////////////////////////

frobulator.link "${PREFIX}"/media/internal/Git/terminal "${HOME}"/.config geany

# shell ////////////////////////////////////////////////////////////////////////

files_list+=(
	bash-aliases
	bash-configuration
	bash-functions
	bash-login
	bash-logout
	bash-profile
)

frobulator.download get.trmnl.me "${HOME}" ${files_list[@]}

frobulator.link "${HOME}" /root ${files_list[@]}

files_list=()

# termux ///////////////////////////////////////////////////////////////////////


files_list+=(
	termux-colors
	termux-properties
)

frobulator.download get.trmnl.me "${PREFIX}"/bin ${files_list[@]}

frobulator.link "${PREFIX}"bin "${HOME}"/.termux termux-colors     colors.properties
frobulator.link "${PREFIX}"bin "${HOME}"/.termux termux-properties termux.properties

files_list=()
