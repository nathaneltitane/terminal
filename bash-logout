#!/bin/bash

# logout ///////////////////////////////////////////////////////////////////////

# dextop ///////////////////////////////////////////////////////////////////////

if [ "${TERMUX_VERSION}" ] && [ -f "${HOME}"/.dextop/dextop ]
then
	# automatic session stop

	if [[ $(cat "${HOME}"/.dextop/dextop-logout) = "logout" ]]
	then
		# audio

		if [[ $(pidof pulseaudio) ]]
		then
			pulseaudio --kill
		fi

		# vnc

		if [[ $(pidof x11vnc) ]]
		then
			container-session -x
		fi

		# x11

		if [[ $(pidof app_process / com.termux.x11.Loader) ]]
		then
			container-session -x
		fi
	fi
fi
