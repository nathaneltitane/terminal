#!/bin/bash

# logout ///////////////////////////////////////////////////////////////////////

if [ -n "${TERMUX_VERSION}" ]
then
	frobulator.fwd "Logging out..."
	echo

	frobulator.timeout
fi

# dextop ///////////////////////////////////////////////////////////////////////

if [ -n "${TERMUX_VERSION}" ]
then
	# automatic session stop

	if [[ $(cat "${HOME}"/.dextop/dextop-logout) = "logout" ]]
	then
		# audio

		if [[ $(pgrep -f pulseaudio) ]]
		then
			pulseaudio --kill
		fi

		if [[ $(pgrep -f com.termux.x11) ]]
		then
			container-session -x

			pkill -f com.termux.x11

			pkill -f virgl
		fi
	fi
fi
