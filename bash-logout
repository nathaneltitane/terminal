#!/bin/bash

# dextop ///////////////////////////////////////////////////////////////////////

if [ -f "${HOME}"/.dextop/dextop ]
then
	if [[ $(cat "${HOME}"/.dextop/dextop-logout) = "logout" ]]
	then

		# audio

		if [[ $(pidof pulseaudio) ]]
		then
			pulseaudio --kill
		fi

		# automatic session stop

		if [[ $(pidof Xvnc) ]]
		then
			container-session -x
		fi
	fi
fi
