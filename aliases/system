# system #

[[ $(command -v systemctl) ]] && alias 'start'='sudo systemctl start'
[[ $(command -v systemctl) ]] && alias 'stop'='sudo systemctl stop'
[[ $(command -v systemctl) ]] && alias 'enable'='sudo systemctl enable'
[[ $(command -v systemctl) ]] && alias 'disable'='sudo systemctl disable'
[[ $(command -v systemctl) ]] && alias 'status'='sudo systemctl status'