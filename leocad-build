#!/bin/bash

# dependencies /////////////////////////////////////////////////////////////////

if [[ -z $(command -v frobulator) ]]
then
	if [[ $(id -u -n) = "root" ]]
	then
		SUDO_HOME=/root

		USER="${SUDO_USER}"

		HOME=/home/"${USER}"
	fi

	if [[ -z $(command -v curl) ]]
	then
		yes | apt-get install curl
	fi

	if [ ! -d "${HOME}"/.local/bin ]
	then
		mkdir -p "${HOME}"/.local/bin
	fi

	curl -s -L get.frbltr.app > "${HOME}"/.local/bin

	chmod +x "${HOME}"/.local/bin/frobulator
fi

. "${HOME}"/.local/bin/frobulator

# superuser ////////////////////////////////////////////////////////////////////

frobulator.escalate

# script ///////////////////////////////////////////////////////////////////////

script=$(basename -- "${BASH_SOURCE[0]}")

# version //////////////////////////////////////////////////////////////////////

version="09-23-2022"

# usage ////////////////////////////////////////////////////////////////////////

# prompt ///////////////////////////////////////////////////////////////////////

frobulator.script "Setting up ${script#*-}"
echo

# variables ////////////////////////////////////////////////////////////////////

TEMPORARY=$(mktemp -d -t TEMPORARY.XXXXXX)

trap 'rm -rf "${TEMPORARY}"' EXIT

build_directory="${TEMPORARY}"

application="leocad"
source="https://github.com/leozide/leocad.git"

# requirements /////////////////////////////////////////////////////////////////////

list+=(
	git
	hub
	g++
	make
	zip
	zlib1g-dev
	libqt5concurrent5
	libqt5opengl5
	libqt5opengl5-dev
	libqt5printsupport5
	libqt5xml5
	qtbase5-dev
	qttools5-dev
	qttools5-dev-tools
)

frobulator.require ${list[@]}

list=()

# functions ////////////////////////////////////////////////////////////////////

# get source code

command_clone="git clone --quiet"

frobulator.log "${command_clone} ${source} ${build_directory}" &

frobulator.progress "Cloning..."

cd "${build_directory}"

# compile project

qmake "${application}".pro

# compile binary

command_build="make -j$(nproc)"

frobulator.log "${command_build}" &

frobulator.progress "Building..."

# update binary

cp "${build_directory}"/build/release/"${application}" /usr/bin/"${application}"

# generate launcher

cat <<- 'FILE' > /usr/share/applications/leocad.desktop
[Desktop Entry]
Encoding=UTF-8
Name=LeoCAD
GenericName=LDraw Model Editor
Comment=LDraw Model Editor
Exec=/usr/bin/leocad
Icon=leocad
Terminal=false
Type=Application
MimeType=application/x-ldraw;application/x-multipart-ldraw;
Categories=Graphics;2DGraphics;3DGraphics;Editor;
FILE
