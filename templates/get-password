#!/bin/bash

# Author: Nathanel Titane - nathanel.titane@gmail.com

# get password #

# dependencies #

curl -sL get.cnsl.app/console> /usr/bin/console && . /usr/bin/console

# get password

console.inf "Set desired password for system use."

unset password

echo -n "Password: "

while IFS= read -p "$prompt" -r -s -n 1 character
do
	# enter / accept password
	
	if [[ $character == $'\0' ]]
	then
		# break if 'NUL'
		
		break
	fi
	
	# handle backspace / delete character input
	
	if [[ $character == $'\177' ]]
	then
		# remove input on 'BACKSPACE'/'DEL'
		
		prompt=$'\b \b'
		password="${password%?}"
	else
		# set character mask
		
		prompt='[]'
		password+="$character"
	fi
done
