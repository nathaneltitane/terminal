#!/bin/bash

# Author: Nathanel Titane - nathanel.titane@gmail.com

# style qt4 #

# dependencies #

# variables #

# create directory

if [ ! -e "${HOME}"/.config ]
then
	mkdir "${HOME}"/.config
fi

# write configuration

cat << 'FILE' > "${HOME}"/.config/Trolltech.conf
[Qt]

style=GTK+
FILE

# link configuration file for GTK 3+ setup

ln -s -f "${HOME}"/.config/Trolltech.conf "${HOME}"/.config/gtk-3.0/Trolltech.conf
