#!/bin/bash

# Author: Nathanel Titane - nathanel.titane@gmail.com

# qt5 style #

# dependencies #

curl -sL get.cnsl.app/console> /usr/bin/console && . /usr/bin/console

# variables #

# install required packages

install_list=(
	qt5-style-plugins
)

console.install ${install_list[@]}

# write configuration

cat << 'FILE' >> /etc/environment

# fix themeing compliance for qt5 applications #

QT_QPA_PLATFORMTHEME=gtk2
FILE
